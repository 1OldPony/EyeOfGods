@model EyeOfGods.Models.ViewModels.StatisticsViewModel
@{
    ViewBag.Title = "";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div id="pageBlock" style="display:flex;flex-direction:row;margin:auto;max-width:1250px;">
    <div id="leftMenu" style="display:flex;flex-direction:column;align-items:center;width:250px;">
        <div id="menuButton" style="display: flex; justify-content: center; align-items: center; border-radius: 5px; background-color: black; width: 100%; padding: 10px 0 10px 0; margin: 1px;"><div id="menuButtonText" style="color: white;">Привязать типы стрелкового</div></div>
        <div id="menuButton" style="display: flex; justify-content: center; align-items: center; border-radius: 5px; background-color: black; width: 100%; padding: 10px 0 10px 0; margin: 1px;"><div id="menuButtonText" style="color: white;">Привязать приказы родам войск</div></div>
